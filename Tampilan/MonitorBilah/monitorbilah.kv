#:import utils kivy.utils

<MonitorBilah>:
    spacing: 3
    size_hint: 1, 1
    orientation: 'vertical'
    Normal:
        md_bg_color: '#D9D9D9'
    Peking:
        md_bg_color: '#D9D9D9'
    Kenong:
        md_bg_color: '#D9D9D9'
    Gong:
        md_bg_color: '#D9D9D9'

<Normal>:
    size_hint: 1, 1
    MDRelativeLayout:
        MDLabel:
            pos_hint: {'x': 27/582, 'top': (112-10)/112}
            adaptive_size: True
            text: 'Bilah Normal :'

        NormalMonitor:
            pos_hint: {'x': 27/582, 'top': (112-42)/112}
            size_hint: 527/582, 58/112
            MDBoxLayout:
                spacing: 3
                RelativeLayout:
                    canvas:
                        Color:
                            rgb: app.monitor.bilahnormal1
                        Rectangle:
                            size: self.size
